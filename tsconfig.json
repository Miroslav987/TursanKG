{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@app": [
        "app"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@pages": [
        "pages"
      ],
      "@widgets/*": [
        "widgets/*"
      ],
      "@widgets": [
        "widgets"
      ],
      "@features/*": [
        "features/*"
      ],
      "@features": [
        "features"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@entities": [
        "entities"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@shared": [
        "shared"
      ],
      "@view/*": [
        "view/*"
      ],
      "@view": [
        "view"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".bun",
    ".next",
    "out",
    "public",
    "vite.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
